{
	"compilerOptions": {
		"target": "ESNext", // Target latest ECMAScript features
		"module": "ESNext", // Use native ES modules
		"moduleResolution": "Bundler", // Or 'NodeNext', Bundler is often better for modern tooling
		"outDir": "./dist", // Optional: specify output directory
		"rootDir": "./", // Source directory
		"declaration": true, // Generate .d.ts files
		"sourceMap": true, // Generate .js.map files
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true, // Added to allow importing .ts files directly
		"noEmit": true // Required when using allowImportingTsExtensions
	},
	"include": [
		"*.ts", // Include root .ts files (like test_connection.ts)
		"sdk-src/**/*.ts" // Include all .ts files within sdk-src recursively
	],
	"exclude": [
		"node_modules"
	]
}